{
  "name": "bit",
  "description": "Code for bit packages",
  "author": "Spencer Brower",
  "license": "GPL-3.0+",
  "private": true,
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/react-typescript@3.0.17",
      "tester": "bit.envs/testers/jest@22.4.3"
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "yarn"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "bit.env",
      "dist"
    ]
  },
  "scripts": {
    "test": "jest",
    "add": "bit add src/components/* --exclude *.test.*",
    "tag": "bit tag",
    "build": "bit build",
    "publish": "bit export sbrow.react",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@bit/react-bootstrap.react-bootstrap.col": "^1.0.0",
    "@bit/react-bootstrap.react-bootstrap.navbar": "^1.0.0",
    "@sbrow/eslint-config": "^1.3.1",
    "@sbrow/prettier-config": "^1.0.2",
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/cli": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.3",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.3.1",
    "jest": "^24.9.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.1.1",
    "storybook-dark-mode": "^0.1.7",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  }
}
